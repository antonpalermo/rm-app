{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "paths": {
      "@components": ["components/index.ts"],
      "@components/nav": ["components/navbar/index.tsx"],
      "@components/footer": ["components/footer/index.tsx"],
      "@lib/helpers": ["lib/index.ts"],
      "@lib/query": ["lib/query/index.ts"],
      "@lib/schema": ["lib/schema/index.ts"],
      "@pages/*": ["pages/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
